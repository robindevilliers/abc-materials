<?schema version="2"?>
<page defnVersion="v1" id="resetPasswordRequest" title="Reset Password Request" group="public">
    <div v="v1" orientation="COLUMN" justifyContent="SPACE_AROUND" alignItems="STRETCH">
        <div v="v1" orientation="ROW" justifyContent="SPACE_AROUND" alignItems="CENTER" padding="1em">
            <image v="v1" id="title-img" src="logo.jpg" width="426px" height="200px" margin="0 5em 2em 0"/>
            <div v="v1" orientation="COLUMN" justifyContent="SPACE_AROUND" alignItems="CENTER">
                <title size="LARGE" v="v1">
                    <textual>Reset Password</textual>
                </title>
                <text v="v1">
                    <textual>Please enter your email address below and we will send the owner of the
                        email address a link to complete the password reset.
                    </textual>
                </text>
            </div>
        </div>
        <reset-password-request-panel/>
    </div>
</page>
