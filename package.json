{
  "name": "materials-toolkit",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "clean": "rm -rf dist www",
    "compile": "webpack --config webpack.config.cjs",
    "test": "jest",
    "lint": "eslint --ext js,ts lib/",
    "css:scss": "sass materials/scss/main.scss www/public/css/main.css -I . -q --style=compressed",
    "css:autoprefixer": "postcss -u autoprefixer -r www/public/css/*.css",
    "css:lint": "stylelint materials/scss/*.scss  --custom-syntax postcss-scss",
    "build:compile": "npm run compile",
    "build:css": "npm run css:lint && npm run css:scss && npm run css:autoprefixer && copyfiles -u 3 www/public/css/main.css materials/public/css/",
    "build:js": "webpack --config webpack.test.config.cjs --mode=production && copyfiles -u 3 www/public/js/main.js materials/public/js/",
    "build:images": "imagemin materials/public/img/**/* --out-dir=www/public/img",
    "build:fonts": "copyfiles -u 3 materials/public/fonts/* www/public/fonts/ && copyfiles -u 4 node_modules/bootstrap-icons/font/fonts/* www/public/fonts/",
    "build:html": "node --enable-source-maps ./dist/materials-toolkit.js --dir materials --output ./www",
    "build": "run-s build:*",
    "watch:compile": "onchange \"lib\" -- npm run compile",
    "watch:css": "onchange \"materials/scss\" -- npm run build:css",
    "watch:images": "onchange \"materials/public/img\" -- npm run build:images",
    "watch:html": "onchange \"dist/materials-toolkit.js\" \"materials/pages\"  \"materials/emails\" \"materials/partials\" \"materials/*.ftl\" \"materials/plantain-substitutions.json\" -- node ./dist/materials-toolkit.js --dir materials --output ./www",
    "watch:serve": "ws --directory www  --static.index main.html",
    "watch": "npm run build && run-p watch:*",
    "watch:js": "onchange \"materials/js\" -- webpack --config webpack.test.config.cjs --mode=production && copyfiles -u 3 www/public/js/main.js materials/public/js/",
    "start": "npm run watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "^7.21.4",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.4",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "autoprefixer": "^10.4.14",
    "bootstrap": "^4.6.2",
    "bootstrap-icons": "^1.10.3",
    "copyfiles": "^2.4.1",
    "eslint": "^8.47.0",
    "eslint-config-standard-with-typescript": "^37.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.1",
    "imagemin-cli": "^7.0.0",
    "jest": "^29.7.0",
    "jquery": "^3.6.4",
    "local-web-server": "^5.3.3",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "postcss-scss": "^4.0.6",
    "sass": "^1.83.4",
    "stylelint": "^14.16.1",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "commander": "^7.2.0",
    "html-format": "^1.1.6"
  }
}
